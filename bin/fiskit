#!/usr/bin/env node

var Liftoff = require('liftoff');
var argv = require('minimist')(process.argv.slice(2));
var path = require('path');
var cli = new Liftoff({
    name: 'fk',
    processTitle: 'fiskit',
    moduleName: 'fiskit',
    configName: '{fk,fis}-conf',
    extensions: {
        '.js': null
    }
});

cli.launch({
    cwd: argv.r || argv.root,
    configPath: argv.f || argv.file
}, function (env) {
    var fiskit;
    if (!env.modulePath) {
        fiskit = require('../');
    } else {
        fiskit = require(env.modulePath);
    }
    fiskit.set('system.localNPMFolder', path.join(env.cwd, 'node_modules/fiskit'));
    fiskit.set('system.globalNPMFolder', path.dirname(__dirname));

    // 截获release后续参数
    argv._[0] === 'release' && setReleaseArg(argv);

    fiskit.cli.run(argv, env);
});

// 获取release参数，添加fiskit设置
function setReleaseArg(argv) {
    if(argv.D || argv.domain) {
        fiskit.set('--domain', true);
        delete argv.D;
        delete argv.domain;
    }
    if(argv.p || argv.pack) {
        fiskit.set('--pack', true);
        delete argv.p;
        delete argv.pack;
    }
}